.study
  .index
    .contents
      - @studies.each do |study|
        .contents__box
          .contents__box__top
            .contents__box__top__title
              = link_to study.title,study_path(study.id)
            .contents__box__top__user
              = User.find(study.user_id).name 
          .contents__box__bottom
            - study.tags.each do |tag|
              .contents__box__bottom__tag
                = link_to "##{tag.name}",tag_click_study_path(tag.id)
