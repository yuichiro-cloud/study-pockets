.study
  .show
    .contents
      .contents__fav
        = "お気に入り"
        %i.far.fa-star#favorite
      .contents__tags
        - @tags.each do |tag|
          .contents__tags__tag
            = link_to "##{tag.name}",tag_click_study_path(tag.id),class:"contents__tags__tag__link"
      .contents__user
        .contents__user__left
          = '投稿者'
        .contents__user__right
          = User.find(@study.user_id).name
      .contents__title
        = @study.title
      .contents__content
        -# = @study.content
        = text_url_to_link(@study.content).html_safe  #application_helper.rbで定義したurlをlinkに変更する記述